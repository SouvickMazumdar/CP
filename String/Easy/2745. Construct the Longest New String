class Solution {
public:
    int longestString(int x, int y, int z) {
        int len=0;
        if(x>y)
        {
            len=y*4+2;
        }
        else if(y>x)
        {
            len=x*4+2;
        }
        else
        {
            len=x*4;
        }
        len+=(z*2);
        return len;

    }
};
