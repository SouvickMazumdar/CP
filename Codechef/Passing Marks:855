//https://www.codechef.com/problems/CUTOFF

#include <bits/stdc++.h>
#define ll long long int
#define fastio() ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(__null);
#define endl "\n"
using namespace std;

int main() {
    fastio();
	// your code goes here
	ll t;
	cin>>t;
	while(t--)
	{
	 int a,b;
	 cin>>a>>b;
	 vector<ll>vec(a,0);
	 for(int i=0;i<a;i++)
	 {
	     cin>>vec[i];
	 }
	 sort(vec.begin(),vec.end(),greater<int>());
	 cout<<vec[b-1]-1<<endl;
	    
	}
	return 0;
}
