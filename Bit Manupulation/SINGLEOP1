#include <bits/stdc++.h>
#define ll long long int
#define fastio() ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(__null);
#define endl "\n"
using namespace std;
//https://www.youtube.com/watch?v=dvxhi1crXtw&ab_channel=VishwasKapoor

//x=x xor ( x >> y )
// this is the actual evaluation 
//we have to just right shift value by y times , this equal to dividing value by 2 to the power y
// therfore on the position of first zero we need 1 then resultant will become maximum 
int main() {
    fastio();
	// your code goes here
	ll t;
	cin>>t;
	while(t--)
	{
	    int k;
	    cin>>k;
	    string b;
	    cin>>b;
	    int count=0;
	    for(int i=0;i<k;i++)
	    {
	        if(b[i]=='1')count++;
	        else break;
	    }
	    cout<<count<<endl;
	    
	    
	}
	return 0;
}
